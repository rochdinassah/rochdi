#!/usr/bin/env node

// author: rochdi nassah
// created: 2025/09/23

'use strict';

const rochdi = require('../');

const { Discord } = rochdi;

void async function () {
  const discord = new Discord(process.argv[2], { presence_status: 'invisible' });

  await discord.connect() && !void discord.disconnect() || exit('error');

  const { bot, global_name, username } = discord.user;

  log('success(%s) | %s', bot ? 'bot' : 'user', global_name ?? username);
}();
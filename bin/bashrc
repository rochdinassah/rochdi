#!/bin/bash

# author: rochdi nassah
# created: 2025/09/19

# aliases start
alias desktop='cd ~/Desktop'
alias c='clear'
alias cleartmp='sudo rm -rf /tmp/* /tmp/.*'
alias rochdi='desktop && cd rochdi && code .'
alias apk='desktop && cd apk'
alias syn='echo ack'
alias rw='desktop && cd rochdi && npm run rw'
if [ $(pwd) == $(echo ~) ]; then desktop; fi
# aliases end

# functions start
push() {
  commit=$@

  if [ 0 == ${#commit} ]
  then
    commit='noop, sync with remote'
  fi

  git add -A
  git commit -m "$commit"
  git push
}

extract() {
  outdir=/tmp/$(echo $1 | sed 's/\.[a-z].*//i')
  tar --file $1 --extract - &&
  cd $outdir
}

mkdir() {
  /usr/bin/mkdir $1 && cd $1
}

btoa() {
  node -e "console.log(btoa('$1'))"
}

atob() {
  node -e "console.log(atob('$1'))"
}
# functions end
#!/bin/bash

# author: rochdi nassah
# created: 2025/09/19

# aliases start
alias desktop='cd ~/Desktop'
alias c='clear'
alias cleartmp='sudo rm -rf /tmp/* /tmp/.*'
alias stake='cd /opt/stake'
alias kick='cd /opt/kick'
alias rochdi='cd /opt/rochdi'
alias apk='cd /opt/apk'
alias me='cd /opt/me'
alias opt='cd /opt'
if [ $(pwd) == $(echo ~) ]; then desktop; fi
# aliases end

# functions start
push() {
  commit=$@

  if [ 0 == ${#commit} ]
  then
    commit='sync'
  fi

  git add -A
  git commit -m "$commit"
  git push
}

mkdir() {
  /usr/bin/mkdir $1 && cd $1
}

btoa() {
  node -e "console.log(btoa('$1'))"
}

atob() {
  node -e "console.log(atob('$1'))"
}
# functions end
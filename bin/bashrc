#!/bin/bash

# author: rochdi nassah
# created: 2025/09/19

alias desktop='cd ~/Desktop'
alias c='clear'
alias cleartmp='sudo rm -rf /tmp/* /tmp/.*'
alias rochdi='desktop; cd rochdi; code .'
alias syn='echo ack'
alias rw='rochdi; npm run rw'

if [ $(pwd) == $(echo ~) ]
then
  desktop
fi

push() {
  commit=$@

  if [ 0 == ${#commit} ]
  then
    commit='noop, sync with remote'
  fi

  git add -A
  git commit -m "$commit"
  git push
}

extract() {
  tar --file $1 --extract &&
  rm -rf $1 &&
  cd $(echo $1 | sed 's/\.[a-z].*//i')
}

mkdir() {
  /usr/bin/mkdir $1 && cd $1
}